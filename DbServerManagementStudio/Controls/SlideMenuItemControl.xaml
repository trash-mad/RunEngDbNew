<UserControl x:Class="DbServerManagementStudio.SlideMenuItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DbServerManagementStudio"
             mc:Ignorable="d" d:DesignWidth="300"
             x:Name="SlideMenuItemControlMain">
    <Grid Background="Transparent" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="40"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ItemImage" Margin="5" Grid.Column="0"/>
        <Label x:Name="ItemName" Content="Элемент" Grid.Column="1" VerticalContentAlignment="Center" FontWeight="Light"  FontSize="18"/>
    </Grid>
</UserControl>
