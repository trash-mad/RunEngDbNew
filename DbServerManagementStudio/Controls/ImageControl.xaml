<UserControl x:Class="DbServerManagementStudio.ImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DbServerManagementStudio"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Expander Header="Развернуть" x:Name="ImageExpander">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Image x:Name="LoadedImage" MaxHeight="100"/>
            <Button Click="ChooseImage" Content="Выбрать"/>
        </StackPanel>
    </Expander>
</UserControl>
